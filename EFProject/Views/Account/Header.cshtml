@using Microsoft.AspNet.Identity
<nav id="top-nav" class="navbar navbar-expand-lg navbar-light bg-light">
    <!-- <a class="navbar-brand" href="#">Navbar</a> -->
    <div class="col-md-2"> </div>
    <div class="col-md-3 mt-2 mr-5 product-name"> My Twitter Clone </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <div class="pull-left" style="width: 60%; text-align:right;">
            @if (Request.IsAuthenticated)
            {
                <span>
                    Welcome @User.Identity.GetUserName()
                </span>
            }
        </div>
        <div class="pull-right">
            <ul class="navbar-nav mt-2 ml-auto mt-lg-0">
                <li class="nav-item mx-2">
                    @Html.ActionLink("Home", "Index", "Tweet", routeValues: null, htmlAttributes: new { id = "homeLink" })
                </li>
                <li class="nav-item mx-2">
                    @Html.ActionLink("Profile", "UpdateAccount", "Account", new { userId = @User.Identity.GetUserName() }, htmlAttributes: new { id = "profileLink" })
                </li>
                <li class="nav-item mx-2">
                    @Html.ActionLink("SignOut", "Login", "Account", routeValues: null, htmlAttributes: new { id = "logoutLink" })
                </li>
            </ul>
        </div>

    </div>
</nav>

